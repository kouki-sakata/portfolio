{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "Local:",
      "startServerReadyTimeout": 10000,
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/sign-in"
      ],
      "settings": {
        "preset": "desktop",
        "budgetsPath": "./performance/performance-budgets.json",
        "formFactor": "desktop",
        "screenEmulation": {
          "mobile": false,
          "width": 1366,
          "height": 768,
          "deviceScaleFactor": 1
        },
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 1500
          }
        ],
        "interactive": [
          "error",
          {
            "maxNumericValue": 2000
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouseci"
    }
  }
}
