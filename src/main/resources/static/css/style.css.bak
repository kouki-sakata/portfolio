/* 共通 */
:root {
	/* ライトモード（デフォルト）の変数 */
	--background-color: #ffffff;
	--text-color: #333333;
	--primary-color: #4285f4;
	--secondary-color: #f5f5f5;
	--border-color: #e0e0e0;

	/* フォーム関連 */
	--form-bg: #ffffff;
	--form-text: #000000;
	--input-bg: #ffffff;
	--input-border: #d2d6da;
	--input-text: #333333;
	--form-shadow: 0 4px 7px -1px rgba(0, 0, 0, .11), 0 2px 4px -1px rgba(0, 0, 0, .07);

	/* テーブル関連 */
	--table-bg: #ffffff;
	--table-border: #e0e0e0;
	--link-color: blue;

	/* ナビゲーション */
	--nav-text: #67748e;
	--hamburger-color: #333333;
	/* ハンバーガーメニュー用の色を追加 */

	/* その他 */
	--box-shadow: 0 20px 27px 0 rgba(0, 0, 0, .05);
}

/* ダークモード用の変数 */
[data-theme="dark"] {
	/* 基本色 */
	--background-color: #121212;
	--text-color: rgba(255, 255, 255, 0.87);
	--primary-color: #5c9eff;
	--secondary-color: #2c2c2c;
	--border-color: #444444;

	/* フォーム関連 */
	--form-bg: #1e1e1e;
	--form-text: rgba(255, 255, 255, 0.87);
	--input-bg: #2c2c2c;
	--input-border: #444444;
	--input-text: rgba(255, 255, 255, 0.87);
	--form-shadow: 0 4px 7px -1px rgba(0, 0, 0, .3), 0 2px 4px -1px rgba(0, 0, 0, .2);

	/* テーブル関連 */
	--table-bg: #1e1e1e;
	--table-border: #444444;
	--link-color: #5c9eff;

	/* ナビゲーション */
	--nav-text: rgba(255, 255, 255, 0.6);
	--hamburger-color: #ffffff;
	/* ハンバーガーメニュー用の色を追加 */

	/* その他 */
	--box-shadow: 0 20px 27px 0 rgba(0, 0, 0, .3);

	/* 拡張ダークモード変数 */
	--bg-primary: #121212;
	--bg-secondary: #1e1e1e;
	--bg-tertiary: #2c2c2c;
	--text-primary: rgba(255, 255, 255, 0.87);
	--text-secondary: rgba(255, 255, 255, 0.6);
	--text-disabled: rgba(255, 255, 255, 0.38);
	--accent-blue: #3da8f5;
	--accent-orange: #ff7e5f;
	--divider: rgba(255, 255, 255, 0.12);

	/* 白背景要素のダークモード対応 */
	--bg-white-area: #1e1e1e;
}

html {
	font-size: calc(12 / 1280 * 100vw);
	/* 画面幅1280pxで12px*/
}

body {
	background-color: var(--background-color);
	color: var(--text-color);
}

section {
	margin: 0 1.3rem;
	width: 82%;
}

.container {
	height: 100vh;
	position: relative;
}

.space {
	text-align: end;
}

#input_content {
  height: 50px;
  width: 100%;
  max-width: 100%;
  font-size: 1.2rem
}

#input_date {
	height: 50px;
	width: 100%;
	max-width: 100%;
  font-size: 1.2rem
}

.text_white2 {
	position: relative;
	/* 必要に応じて */
	transform: translateX(-20px);
	top: -20px;
}

.myflat {
  display: flex;
  gap: 20px;
}

.label-spacing {
    margin-right: 110px;
    display: inline-block;
}

/* ヘッダー */
.common_header {
	margin: 1rem 2rem;
	background-color: var(--background-color);
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.usr_name {
	font-size: 1rem;
	color: var(--text-color);
}

.sign_out {
	margin-left: .5rem;
	background-color: var(--secondary-color);
	color: var(--text-color);
	border: 1px solid var(--border-color);
}

