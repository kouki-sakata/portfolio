<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- プロファイル別のログ設定 -->
    <springProfile name="dev">
        <property name="LOG_FILE" value="logs/teamdev-dev.log"/>
        <property name="LOG_LEVEL_ROOT" value="INFO"/>
        <property name="LOG_LEVEL_APP" value="DEBUG"/>
    </springProfile>
    
    <springProfile name="staging">
        <property name="LOG_FILE" value="logs/teamdev-staging.log"/>
        <property name="LOG_LEVEL_ROOT" value="INFO"/>
        <property name="LOG_LEVEL_APP" value="INFO"/>
    </springProfile>
    
    <springProfile name="prod">
        <property name="LOG_FILE" value="logs/teamdev-prod.log"/>
        <property name="LOG_LEVEL_ROOT" value="WARN"/>
        <property name="LOG_LEVEL_APP" value="WARN"/>
    </springProfile>

    <!-- コンソール出力設定 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] [%X{userId:-anonymous}] %cyan(%logger{36}) - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ファイル出力設定（通常ログ） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE:-logs/teamdev.log}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{userId:-anonymous}] [%X{requestId:-}] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE:-logs/teamdev}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- エラーログ専用設定 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/teamdev-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{userId:-anonymous}] [%X{requestId:-}] %logger{36} - %msg%n%ex</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/teamdev-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- セキュリティログ専用設定 -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/teamdev-security.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{userId:-anonymous}] [%X{sessionId:-}] [%X{remoteAddr:-}] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/teamdev-security.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>180</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 開発環境専用設定 -->
    <springProfile name="dev">
        <logger name="com.example.teamdev" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
        <logger name="org.springframework.web" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- ステージング環境専用設定 -->
    <springProfile name="staging">
        <logger name="com.example.teamdev" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
        <logger name="com.example.teamdev.aspect.SessionValidationAspect" level="INFO" additivity="false">
            <appender-ref ref="SECURITY_FILE"/>
            <appender-ref ref="FILE"/>
        </logger>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- 本番環境専用設定 -->
    <springProfile name="prod">
        <logger name="com.example.teamdev" level="WARN" additivity="false">
            <appender-ref ref="FILE"/>
        </logger>
        <logger name="com.example.teamdev.security" level="INFO" additivity="false">
            <appender-ref ref="SECURITY_FILE"/>
        </logger>
        <logger name="com.example.teamdev.aspect.SessionValidationAspect" level="INFO" additivity="false">
            <appender-ref ref="SECURITY_FILE"/>
            <appender-ref ref="FILE"/>
        </logger>
        <logger name="org.springframework.security" level="WARN" additivity="false">
            <appender-ref ref="SECURITY_FILE"/>
        </logger>
        <root level="WARN">
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- テスト環境設定 -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- SQLインジェクション対策：MyBatisのSQLログを制限 -->
    <springProfile name="prod">
        <logger name="com.example.teamdev.mapper" level="ERROR" additivity="false">
            <appender-ref ref="ERROR_FILE"/>
        </logger>
        <logger name="org.apache.ibatis" level="ERROR" additivity="false">
            <appender-ref ref="ERROR_FILE"/>
        </logger>
    </springProfile>

    <!-- 監査ログ用設定（重要な操作の記録） -->
    <logger name="AUDIT" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_FILE"/>
    </logger>

    <!-- 外部ライブラリログレベル制御 -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.thymeleaf" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>
    <logger name="org.mybatis" level="WARN"/>

</configuration>