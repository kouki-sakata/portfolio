# TeamDevelop Docker Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
APP_NAME=TeamDevelop
SERVER_PORT=8080

# Database Settings for Local Development
DB_HOST=localhost
DB_PORT=3306
DB_NAME=timemanagerdb
DB_USERNAME=root
DB_PASSWORD=root

# Database Settings for Docker
DOCKER_DB_NAME=teamdev_db
DOCKER_DB_USERNAME=teamdev_user
DOCKER_DB_PASSWORD=your_secure_password_here
DOCKER_DB_ROOT_PASSWORD=your_secure_root_password_here

# Security Settings (IMPORTANT: Change these in production!)
JWT_SECRET=your-256-bit-secret-key-here-should-be-very-long-and-secure
ENCRYPTION_KEY=your-encryption-key-here-should-be-32-characters

# Logging Levels
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_HIBERNATE=WARN
LOG_LEVEL_SQL=WARN
LOG_LEVEL_APP=INFO
LOG_LEVEL_MAPPER=INFO

# Log File Configuration
LOG_FILE=logs/teamdev

# Performance Settings
JAVA_OPTS=-Xms512m -Xmx1g